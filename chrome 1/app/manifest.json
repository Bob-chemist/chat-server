{
  "manifest_version": 2,
  "name": "Уведомления",
  "description": "Для разработчиков ПФР портала",
  "version": "1.0.0",
  "icons": {"128": "icon.png"},
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Opens popup.html"
    }
  },
  "options_page": "options.html",
  "permissions": [
    "cookies",
    "tabs",
    "alarms",
    "notifications",
    "storage"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}